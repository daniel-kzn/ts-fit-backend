// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id            String    @id @default(uuid())
  created_at    DateTime  @default(now())
  updated_at    DateTime  @default(now())
  subscribed    Boolean
  subscribed_at DateTime
  hash_password String
  email         String    @unique
  role          Roles?    @relation(fields: [rolesId], references: [id])
  first_name    String?
  last_name     String?
  birthday      DateTime?
  sexe          String?
  rolesId       Int?
}

model Roles {
  id    Int     @id @default(autoincrement())
  name  String
  Users Users[]
}

// Cours de Thai avec les membrees
model Sessions {
  id           Int      @id @default(autoincrement())
  name         String
  descriptions String
  course_type  String
  created_at   DateTime @default(now())
  updated_at   DateTime @default(now())

  Schedules Schedules[]
}

model Reservations {
  id                 String   @id @default(uuid())
  user_id            String
  schedule_id        String
  reserved_at        DateTime @default(now())
  reservation_status String
}

// Cours de thai, boxe, karat√©
model Courses {
  id           Int    @id @default(autoincrement())
  name         String
  descriptions String
  type         String
}

model CoursesTypes {
  id Int @id @default(autoincrement())
}

// horaires de la session cours de boxe
model Schedules {
  id         String   @id @default(uuid())
  session_id Sessions @relation(fields: [sessionsId], references: [id])
  created_at DateTime @default(now())
  start_at   DateTime
  finish_at  DateTime
  sessionsId Int
}
